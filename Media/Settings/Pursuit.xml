<titleSettings version="1" name="Pursuit">
	<groups>
		<group id="interface" name="Interface" />
		<group id="minimap" name="Minimap" />
		<group id="sound" name="Sound" />
	</groups>
	<settings>
		<setting group="minimap" name="Persistent_LibMinimap_HideMinimap" type="Boolean" default="False" inverted="1" description="Enable minimap" />
		<setting group="minimap" name="Persistent_LibMinimap_RenderSmoothness" type="Integer" default="1" description="Minimap smoothness level">
			<value value="3" name="20 Hz" />
			<value value="2" name="30 Hz" />
			<value value="1" name="60 Hz" />
		</setting>
		<setting group="minimap" name="Persistent_LibMinimap_ZoomSegments" type="Real" default="8." description="Size of the area shown on the minimap">
			<value value="6." name="6 x 6" />
			<value value="8." name="8 x 8" />
			<value value="10." name="10 x 10" />
			<value value="12." name="12 x 12" />
		</setting>
		<setting group="minimap" name="Persistent_LibMinimap_HidePlayers" type="Boolean" default="False" inverted="1" description="Show other player markers on the minimap" />
		<setting group="minimap" name="Persistent_LibMinimap_HideNames" type="Boolean" default="False" inverted="1" description="Show names under player markers" />
		<setting group="minimap" name="Persistent_LibMinimap_HideImage" type="Boolean" default="False" inverted="1" description="Display map image on the minimap" />
		<setting group="minimap" name="Persistent_LibMinimap_DisableRotation" type="Boolean" default="False" inverted="1" description="Rotate minimap with the player" />
		<setting group="minimap" name="Persistent_LibMinimap_DisableUGView" type="Boolean" default="False" inverted="1" description="Switch to underground mode when in tunnels" />
		<setting group="interface" name="Persistent_LibPursuitUI_DisableSpeedometer" type="Boolean" default="False" inverted="1" description="Show the Pursuit Speedometer" />
		<setting group="interface" name="Persistent_LibPursuitUI_UseRetardedUnits" type="Boolean" default="False" inverted="0" description="Speed and distance units">
			<value value="False" name="Metric" />
			<value value="True" name="Imperial" />
		</setting>
		<setting group="interface" name="Persistent_GoalHuntTM_NamesVisibility" type="Integer" default="0" description="FFA modes: player names visibility">
			<value value="0" name="On view" />
			<value value="1" name="Always" />
			<value value="2" name="Hidden" />
		</setting>
		<setting group="interface" name="Persistent_GoalHuntTM_GoalsOnScreen" type="Boolean" default="False" inverted="1" description="Goal Hunt: always show goal markers" />
		<setting group="interface" name="Persistent_LibStreaks_DisableStreaks" type="Boolean" default="False" inverted="1" description="Show streaks while playing (multi-kills)" />
		<setting group="interface" name="Persistent_LibLeaderDisplay_HideLeaderDisplay" type="Boolean" default="False" inverted="1" description="Show leader of the current match" />
		<setting group="interface" name="Persistent_LibChat_EnableEmojiParser" type="Boolean" default="True" inverted="0" description="Chat: show emojis in chat messages" />
		<setting group="interface" name="Persistent_LibTopScores_ShowMatchScores" type="Boolean" default="False" inverted="0" description="Top scores: always show rankings of the entire match" />
		<setting group="interface" name="Persistent_LibPauseMenu_HideMapInfo" type="Boolean" default="False" inverted="1" description="Show information about the current map in the pause menu" />
		<setting group="interface" name="Persistent_LibPursuitUI_UseWideFormat" type="Boolean" default="False" inverted="0" description="Split Screen: use wide format in horizontal layout" />
		<setting group="sound" name="Persistent_LibInterfancy_DisableCountdownSong" type="Boolean" default="False" inverted="1" description="Play special countdown soundtrack" />
	</settings>
	<bindings>
		<binding name="LibMinimap_Toggle" default="N" description="Interface: toggle minimap" />
		<binding name="LibCharacters_Open" default="M" description="Characters: open character selection menu" />
		<binding name="LibChat_BeginTyping" default="T" description="Chat: start typing a message" />
		<binding name="LibChat_TeamMessage" default="Y" description="Chat: start typing a team message" />
		<binding name="LibChat_ToggleChat" default="C" description="Chat: toggle normal/expanded view" />
		<binding name="LibStoragePlayer_Open" default="F4" description="Storage Player: open music player" />
		<binding name="LibStoragePlayer_Prev" default="J" description="Storage Player: previous track" />
		<binding name="LibStoragePlayer_Play" default="K" description="Storage Player: play/pause" />
		<binding name="LibStoragePlayer_Next" default="L" description="Storage Player: next track" />
	</bindings>
</titleSettings>